{
    "model_name": "ensemble",
    "model_params": {
        "models": {
            "conv1d": {
                "layer_params": [
                    [
                        "conv",
                        {
                            "conv_params": { "in_channels": 32, "out_channels": 64, "groups": 32, "kernel_size": 5 },
                            "dim_feedforward": 128,
                            "dropout_params": { "p": 0.2 }
                        }
                    ],
                    [
                        "max_pool",
                        { "kernel_size": 2 }
                    ],
                    [
                        "conv",
                        {
                            "conv_params": { "in_channels": 64, "out_channels": 128, "groups": 64, "kernel_size": 5 },
                            "dim_feedforward": 256,
                            "dropout_params": { "p": 0.15 }
                        }
                    ],
                    [
                        "max_pool",
                        { "kernel_size": 2 }
                    ],
                    [
                        "conv",
                        {
                            "conv_params": { "in_channels": 128, "out_channels": 256, "groups": 128, "kernel_size": 5 },
                            "dim_feedforward": 512,
                            "dropout_params": { "p": 0.2 }
                        }
                    ],
                    [
                        "max_pool",
                        { "kernel_size": 2 }
                    ]
                ]
            },
            "pretrained_transformer": {
                "transformer_model": "roberta-base",
                "transformer_reduction": "cls",
                "hidden_dropout_prob": 0.25
            }
        }
    },
    "classification_head_params": {
        "dropout_p": 0.25,
        "ff_dim": 2048
    },
    "pan_train_params": {
        "data_module_params": {
            "data_path": "data/pan23/transformed",
            "batch_size": 64,
            "max_len": 512,
            "tokenizer": "roberta-base"
        },
        "optimizer_params": {
            "lr": 0.00002
        },
        "trainer_params": {
            "precision": "16-mixed",
            "max_epochs": 10,
            "min_steps": 10000,
            "enable_checkpointing": true,
            "default_root_dir": "out/roberta-base-ensemble/finetuned/",
            "accelerator": "cuda",
            "devices": [2]
        },
        "unfrozen_layers": 6
    }
}
{
    "model_name": "pretrained_transformer",
    "model_params": {
        "transformer_model": "roberta-large",
        "transformer_reduction": "cls",
        "hidden_dropout_prob": 0.3
    },
    "classification_head_params": {
        "dropout_p": 0.3,
        "ff_dim": 2048,
        "joint_pairs": true
    },
    "pan_train_params": {
        "data_module_params": {
            "data_path": "data/pan23/transformed",
            "batch_size": 64,
            "max_len": 512,
            "tokenizer": "roberta-large",
            "joint_pairs": true
        },
        "optimizer_params": {
            "lr": 0.00002
        },
        "trainer_params": {
            "precision": "16-mixed",
            "max_epochs": 10,
            "min_steps": 10000,
            "enable_checkpointing": true,
            "default_root_dir": "out/roberta-large/finetuned/",
            "accelerator": "cuda",
            "devices": [2]
        },
        "unfrozen_layers": 2
    }
}
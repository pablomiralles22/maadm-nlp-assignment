{
    "model_name": "pretrained_transformer",
    "model_params": {
        "transformer_model": "roberta-base",
        "transformer_reduction": "cls",
        "hidden_dropout_prob": 0.25
    },
    "classification_head_params": {
        "dropout_p": 0.25,
        "ff_dim": 2048,
        "joint_pairs": true
    },
    "default_train_params": {
        "data_module_params": {
            "batch_size": 64,
            "max_len": 512,
            "tokenizer": "roberta-base"
        },
        "optimizer_params": {
            "lr": 0.00002
        },
        "trainer_params": {
            "precision": "16-mixed",
            "max_epochs": 10,
            "enable_checkpointing": true,
            "accelerator": "cuda",
            "devices": [2]
        },
        "unfrozen_layers": 6
    },
    "@task1_override": {
        "data_module_params": {
            "data_path": "data/pan23/transformed/task1"
        },
        "trainer_params": {
            "default_root_dir": "out/roberta-base/finetuned/task1"
        }
    },
    "@task2_override": {
        "data_module_params": {
            "data_path": "data/pan23/transformed/task2"
        },
        "trainer_params": {
            "default_root_dir": "out/roberta-base/finetuned/task2",
            "val_check_interval": 0.5
        }
    },
    "@task3_override": {
        "data_module_params": {
            "data_path": "data/pan23/transformed/task3"
        },
        "trainer_params": {
            "default_root_dir": "out/roberta-base/finetuned/task3"
        }
    }
}
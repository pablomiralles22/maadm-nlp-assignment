{
    "model_name": "pretrained_transformer",
    "model_params": {
        "transformer_model": "pablomiralles22/maadm-nlp-pan23-task2-roberta-base-finetuned",
        "transformer_reduction": "cls",
        "hidden_dropout_prob": 0.25,
        "token_env_file": ".env"
    },
    "classification_head_params": {
        "dropout_p": 0.25,
        "ff_dim": 2048
    },
    "default_train_params": {
        "data_module_params": {
            "batch_size": 64,
            "max_len": 512,
            "tokenizer": "roberta-base"
        },
        "optimizer_params": {
            "lr": 0.00003
        },
        "trainer_params": {
            "precision": "16-mixed",
            "max_epochs": 10,
            "enable_checkpointing": true,
            "accelerator": "cuda",
            "devices": [2]
        },
        "unfrozen_layers": 8
    },
    "@task2_override": {
        "data_module_params": {
            "data_path": "data/pan23/transformed/task2"
        },
        "trainer_params": {
            "default_root_dir": "out/roberta-base/finetuned/task2",
            "val_check_interval": 0.5
        }
    },
    "@task1_override": { "skip": true },
    "@task3_override": { "skip": true }
}